<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.gplvote.trustnet"
    android:versionCode="2"
    android:versionName="0.2" >

    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/trustnet_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".AMain"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AServers"
                  android:screenOrientation="portrait"
                  android:label="Trust Net Servers">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="trustnet" android:host="regserver"/>
            </intent-filter>
        </activity>
        <activity android:name=".AConfirmOther"
                  android:screenOrientation="portrait"
                  android:label="Trust Net Verification" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="trustnet" android:host="verification"/>
            </intent-filter>
        </activity>
        <activity android:name=".ATrustChange"
            android:screenOrientation="portrait"
            android:label="Trust Net">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="trustnet" android:host="trust"/>
            </intent-filter>
        </activity>
        <activity android:name=".ATagType"
            android:screenOrientation="portrait"
            android:label="Trust Net">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="trustnet" android:host="taginfo"/>
            </intent-filter>
        </activity>
        <activity android:name=".ATagChange"
            android:screenOrientation="portrait"
            android:label="Trust Net">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="trustnet" android:host="tag"/>
            </intent-filter>
        </activity>
        <activity android:name=".AMessageCreate"
            android:screenOrientation="portrait"
            android:label="Trust Net Message">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="trustnet" android:host="message"/>
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="trustnet" android:host="msg"/>
            </intent-filter>
        </activity>
        <activity android:name=".AServerView" />
        <activity android:name=".AServersSync" />
        <activity android:name=".AAboutMe" />
        <activity android:name=".AAboutMeEdit" />
        <activity android:name=".ASendSign" />
        <activity android:name=".AConfirmMe"/>
        <activity android:name=".AAttestations"/>
        <activity android:name=".AAttestateView"/>
        <activity android:name=".ATrusts"/>
        <activity android:name=".ATrustMe"/>
        <activity android:name=".ATags"/>
        <activity android:name=".AMessages"/>
        <activity android:name=".AMessagesCheck"/>
        <activity android:name=".AGetPublicKey"/>
    </application>

</manifest>
