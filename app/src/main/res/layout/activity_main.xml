<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:text="@string/btn_qr_read"
        android:id="@+id/btnQRRead"
        android:drawableLeft="@drawable/qr_code_icon"
        android:drawableRight="@drawable/qr_code_icon"
        android:layout_weight="1" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:text="@string/btn_me"
        android:id="@+id/btnMe"
        android:layout_weight="1" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:text="@string/btn_servers"
        android:id="@+id/btnServers"
        android:layout_weight="1" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:text="@string/btn_attestations"
        android:id="@+id/btnAttestations"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:text="@string/btn_trusts"
        android:id="@+id/btnTrusts"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:text="@string/btn_tags_attestations"
        android:id="@+id/btnTagsAttestations"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:text="@string/btn_messages"
        android:id="@+id/btnMessages"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1" />

</LinearLayout>
